<div class="games-list">
  <% @games.each do |game| %>  
    <div class="card mb-3" style="border-color: <%= game.color %>">
      <div class="card-header">
        <span><%= color_dot(game) %> <%= game.name.upcase %></span>
      </div>
      <div class="card-body">
        <%= link_to game_path(game) do %>  
          <% if game.sketch.attached? %>  
            <%= image_tag game.sketch.variant(resize_to_limit: [400, 300]), class: 'img-fluid rounded mx-auto d-block' %> 
          <% else %>
            <%= missing_image_tag %>  
          <% end %>
        <% end %>
      </div>
      <div class="card-footer bg-light">
        <span class=""><%= l game.created_at %></span>
        <span class="text-muted float-right">by <%= game.user.name %></span>
      </div>
    </div>
  <% end %>
</div>
