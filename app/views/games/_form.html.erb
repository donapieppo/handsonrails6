<%= simple_form_for @game do |g| %>  
  <%= g.error_notification %>  
  <%= g.input :name %>  
  <%= g.input :description %>  
  <%= g.association :color %>  
  <%= g.association :user %>  
  <% if @game.sketch.attached? %>  
    <%= image_tag @game.sketch.variant(resize_to_limit: [200, 200]) %> 
  <% end %>
  <%= g.input :sketch, as: :file %>
  <%= g.submit %>  
<% end %>
