{
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-undef": "off",
    "no-use-before-define": "off",
    "react/jsx-filename-extension": "off",
    "react/no-array-index-key": "off",
    "no-console": "off",
    "camelcase": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "parser": "flow",
        "semi": true
      }
    ]
  }
}

